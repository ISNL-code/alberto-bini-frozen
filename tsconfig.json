{
    "compilerOptions": {
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "strict": true,
        "lib": ["es2020", "dom", "dom.iterable", "esnext"],
        "module": "es2020",
        "moduleResolution": "node",
        "sourceMap": true,
        "target": "es6",
        "jsx": "react-jsx",
        "noImplicitAny": false,
        "baseUrl": "./src",
        "resolveJsonModule": true,
        "noFallthroughCasesInSwitch": true,
        "isolatedModules": true,
        "noEmit": true

        // "paths": {} / May be used in future
    },
    "exclude": [],
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "src/db/collection.js",
        "src/context/useCardContext.js",
        "src/pages/Gallery/gallery_page/GalleryPage.tsx",
        "src/pages/Gallery/model_details_page/ModelDetails.jsx",
        "src/components/Inputs/MultiSelect.jsx",
        "src/pages/Admin/add_item_page/AddItemPage.jsxPage.jsx",
        "src/components/ListCards/GalleryCard.jsx",
        "src/components/CategoryFilter/CategoryFilter.jsx",
        "src/api/useUserApi.ts",
        "src/components/Login/LoginForm.jsx",
        "src/api/useProductsApi.ts",
        "src/pages/Admin/orders_list/components/components/AddProduct.jsx",
        "src/api/useProductCategoriesApi.js",
        "src/components/GalleryFilterBox/Search.js",
        "src/layouts/Main.js",
        "src/hooks/useGetLanguage.ts",
        "src/constants/constants.js",
        "src/pages/Admin/product_options/CategoriesOptions.jsx",
        "src/context/useFavoriteContext.js",
        "src/pages/Gallery/cart_page/CartPage.jsx",
        "src/pages/Admin/orders_list/OrderListPage.jsx",
        "src/layouts/Admin.jsx",
        "src/layouts/header/Header.jsx",
        "src/pages/Admin/product_options/ColorsOptions.jsx",
        "src/layouts/header/AdminHeader.jsx",
        "src/App.jsx",
        "src/components/Inputs/HeaderSearch.jsx",
        "src/components/Dialog/TextDialog.jsx",
        "src/components/ToolsNavButtons/LanguageButton.jsx",
        "src/api/AuthInterceptor.js",
        "src/pages/ProductDetails/ModelSwiper.tsx",
        "src/pages/ProductDetails/ModelSwiper.tsx",
        "src/assets/svg/phone_call.js"
